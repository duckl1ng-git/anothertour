@model anothertour.Models.Review

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить отзыв</h1>

<h3>Вы уверены, что хотите удлать этот отзыв?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TourId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TourId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
