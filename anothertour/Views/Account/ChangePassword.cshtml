@model anothertour.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}

<h2 class="text-center">Изменение пароля для пользователя @Model.Email</h2>

<hr />

<div class="d-flex justify-content-center align-items-center">
    <form asp-action="ChangePassword" asp-controller="Account">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
    
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label">Старый пароль</label>
            <input type="password" asp-for="OldPassword" class="form-control form-control-lg" />
        </div>

        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">Новый пароль</label>
            <input type="password" asp-for="NewPassword" class="form-control form-control-lg" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>

    </form>

    <br />
    
</div>